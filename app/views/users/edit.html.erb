<div class="container">
 <div class="row">
  <div class = "col-sm12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2 class="mt-3">User info</h2>
     <%= form_with model: @user, local:true do |f| %>
     <div class="form-group">
