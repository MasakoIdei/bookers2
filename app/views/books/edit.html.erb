 <h1>Editing Book</h1>
  <%= form_with model:@book,local:true do |f| %>

   <h2>Title</h2>
   <%= f.text_field :title %>

    <h2>Body</h2>
    <%= f.text_area :body %>

    <br><%= f.submit 'Update Book' %><br>

    <% end %>
      
    <div>
      <%= link_to "Show", book_path(@book) %>
  
      <%= link_to "Back", books_path %>
    </div>