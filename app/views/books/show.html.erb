  <%= @user.introduction %>


  <%= link_to "edit", edit_user_path(@user.id) %>

  <!--% render('books/book',books:@books) %>-->
<h1>Books</h1>
  <table>
    <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
      </tr>
    </thead>
    <!--右側の繰り返し表示のテンプレ-->
    <tbody>
      <tr>
       <td>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
       </td>
       <td>
        <a><%= @book.title %></a>
       </td>
       <td>
        <%= @book.body %>
       </td>
       <% if @user.id == current_user.id %>
        <td>
        <%= link_to "Edit", edit_book_path(@book.id) %>
      </td>
      <td>
        <%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' } %>
      </td>
      <% end %>
      </tr>

    </tbody>