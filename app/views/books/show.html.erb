<div class= "row">
<!--User InfoからBook newまでをrender-->
  <div class= "col-md-3">
   <%= render 'users/user', user: @user %>
   <%= render 'books/new_book', book: @book %>
  </div>
<!--User InfoからBook newまでをrender-->

  <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class='table table-hover table' >
    <tr>
    <td>
      <%= link_to user_path(@book.user_id) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'50x50',format: 'no_image.jpg' %>
         <nav>
           <%= @book.user.name %>
         </nav>
       <% end %>
    </td>
    <td>
      <%= link_to @book.title %>
    </td>
    <td>
      <%= @book.body %>
    </td>
    <% if @user.id == current_user.id %>
      <td>
        <%= link_to "Edit", edit_book_path(@book.id) %>
      </td>
      <td>
        <%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' } %>
      </td>
    <% end %>
    </tr>
    </tbody>
    </table>
    
    </div>
    
  </div>