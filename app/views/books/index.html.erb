<%= flash[:notice] %><!--フラッシュメッセージ表示-->

<div class= "row">

<!--User info-->
  <div class= "col-md-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
    <table class="table">
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </table>
    <div class="row">
        <%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary btn-lg btn-block fas fa-user-cog" do %>
        <% end %>
    </div>

<!--New Book-->
    <h2 clsss="mt-3">New book</h2>
    <%= form_with model:@book, local:true do |f| %>
     <div class="form-group">
       <%= f.label :Title %><br>
       <%= f.text_field :title %>
     </div> 
     <div class="form-group">
       <%= f.label :Opinion %><br>
       <%= f.text_area :body %>
     </div> 
       <%= f.submit 'Create Book',class: "btn btn-success" %>
    <% end %>
  </div>
  
<!--Books-->
  <div class="col-md-8 offset-md-1">

  <h1>Books</h1>
  <table class= "table table-hover table">
    <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
      </tr>
    </thead>
    <!--右側の繰り返し表示のテンプレ-->
    <tbody>
      <% @books.each do |book| %>
      <tr>
       <td>
        <%= link_to user_path(book.user_id) do %>
           <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
         <% end %>
       </td>
       <td>
        <%= link_to book.title,book_path(book.id) %>
       </td>
       <td>
        <%= book.body %>
       </td>
      </tr>
       <% end %>
    </tbody>

   </table>
   </div>
</div>
